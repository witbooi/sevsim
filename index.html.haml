    %script{ :src => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js" }
    %script{ :src => "http://code.highcharts.com/highcharts.js" }
    %script{ :src => "http://cdn.jsdelivr.net/jquery.slick/1.5.0/slick.min.js" }

      
    %link{ :rel => "stylesheet", :href => "https://fonts.googleapis.com/css?family=PT+Serif+Caption&subset=latin,cyrillic" }
    %link{ :rel => "stylesheet", :href => "https://fonts.googleapis.com/css?family=PT+Sans:400,700&subset=latin,cyrillic" }

    %link{ :rel => "stylesheet", :href => "css/style.css" }
    %link{ :rel => "stylesheet", :href => "css/theme.css" }
